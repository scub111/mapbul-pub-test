{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "*": ["types/*"],
        "common/*": ["./src/common/*"],
        "server/*": ["./src/*"],
        "client/*": ["./src/client/*"],
        "codegen/*": ["./src/codegen/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
