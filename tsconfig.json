{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "sourceMap": false,
      "lib": [
         "es6",
         "es7",
         "dom"
      ],
      "baseUrl": "./",  
      "paths": {
        "*": ["types/*"],
        // "common": ["./packages/common/src"],
        "common2/*": ["./src/common/*"],
        "server2/*": ["./src/server/*"],
        "client2/*": ["./src/client/*"],
        "codegen2/*": ["./src/codegen/*"],
      }
   }
}